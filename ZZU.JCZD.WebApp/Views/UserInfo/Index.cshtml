@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @*///////////////////////////导航栏*@
    <div id="mynav" class="row">
        @*每个页的页头*@
        @*页头结束*@
        @*页内导航*@
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="javascirpt:void(0)">主页</a>
                <i class="icon-angle-right"></i>
            </li>
            <li>
                <a href="javascirpt:void(0)">系统管理</a>
                <i class="icon-angle-right"></i>
            </li>
